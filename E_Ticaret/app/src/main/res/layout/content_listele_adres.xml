<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zeynep.e_ticaret.ListeleAdres"
    tools:showIn="@layout/activity_listele_adres">

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siladres"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sil"
        android:onClick="adresSil"
        android:text="Adres Sil" />

    <TextView
        android:id="@+id/siladres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Silinecek Adresinizi SeÃ§iniz..."

        android:textColorHint="@color/foreground_material_light"
        android:textColorHighlight="#b53939"
        android:textSize="21dp"
        android:textStyle="normal"
        android:typeface="sans"
        android:textColor="#320101"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/alticizili"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:layout_marginTop="15dp"
        android:capitalize="none"
        android:drawableTint="#300202"
        android:textColorLink="#080808"
        android:editable="true"
        android:textStyle="bold" />
</RelativeLayout>
