<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:label="Ayarlar"

    tools:context="com.example.zeynep.e_ticaret.KullaniciAyarlar">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adi"
        android:hint="Adınız..."
        android:layout_above="@+id/soyadi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soyadi"
        android:hint="Soyadınız..."
        android:layout_above="@+id/mail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail"
        android:hint="Mail Adresiniz..."
        android:layout_above="@+id/telefon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telefon"
        android:hint="Telefonunuz..."
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/sifre"
        android:hint="Şifreniz..."
        android:layout_below="@+id/telefon"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/telefon" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/button4"
        android:onClick="guncelle"
        android:background="@drawable/refresh"
        android:text="Güncelle"
        android:layout_below="@+id/sifre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="             Kullanıcı Ayarlar"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/adi"
        android:background="#FFA500"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_toEndOf="@+id/button11"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="Çıkış"
        android:id="@+id/button7"
        android:onClick="uygulamacikis"
        android:background="@drawable/cik"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tekrarsifre"
        android:layout_below="@+id/sifre"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/sifre"
        android:hint="Şifre Tekrarı" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/button11"
        android:background="@drawable/back"
        android:layout_alignBottom="@+id/button7"
        android:onClick="geri"
        android:layout_alignParentStart="true" />
</RelativeLayout>
