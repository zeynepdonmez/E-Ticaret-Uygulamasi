<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zeynep.e_ticaret.KayitEkrani">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Adınız..."
        android:layout_marginTop="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soyadi"
        android:layout_below="@+id/adi"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/adi"
        android:hint="Soyadınız..." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/tel"
        android:layout_below="@+id/soyadi"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/soyadi"
        android:hint="Telefonunuz..." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail"
        android:layout_below="@+id/tel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tel"
        android:hint="Mailiniz..." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/sifre"
        android:layout_below="@+id/mail"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/mail"
        android:hint="Şifreniz..." />

    <Button
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:id="@+id/button3"
        android:layout_below="@+id/sifre"
        android:onClick="kayitOl"
        android:layout_alignParentEnd="true"
        android:background="@drawable/kayitol"
        android:text="Kayıt Ol" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kullanıcı Kayıt Ekranı"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#FFA500"
        android:layout_alignEnd="@+id/adi"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="Kayıtlı Kullanıcı"
        android:id="@+id/button12"
        android:layout_below="@+id/sifre"
        android:onClick="kayitlikullanici"
        android:layout_alignParentStart="true"
        android:background="@drawable/girisyap" />
</RelativeLayout>
