<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zeynep.e_ticaret.urunGoster">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/urunlist"
        android:layout_above="@+id/button9"
        android:layout_alignParentEnd="true"
        android:background="#FFA500" />

    <Button
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:text="Sepete Ekle"
        android:id="@+id/button9"
        android:onClick="sepeteEkle"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/urunlist"
        android:background="@drawable/eklesepet" />

    <Button
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:text="sepetim"
        android:id="@+id/button10"
        android:onClick="sepetim"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/sepetim" />
</RelativeLayout>
