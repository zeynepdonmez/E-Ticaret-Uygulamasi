<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Sepetim"
    tools:showIn="@layout/activity_sepetim">

    <ListView
        android:id="@+id/sepetimdekilerlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:layout_below="@+id/toplamfiyat"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/siparissil"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cancel"
        android:onClick="siparissil"
        android:text="Sipariş İptal" />

    <Button
        android:id="@+id/tamamla"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/siparissil"
        android:layout_alignParentEnd="true"
        android:background="@drawable/onayla"
        android:onClick="siparisonay"
        android:text="Tamamla" />


    <TextView
        android:id="@+id/toplamfiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sepetimden Ürün Seç..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/siparissil"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
